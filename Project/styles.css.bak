/* Reset some basic styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* General Body Styles */
body {
    font-family: Arial, sans-serif;
    color: #333;
    margin: 0;
}

/* Header and Navigation */
header {
    background-color: white; /* Background for logo and navigation */
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo {
    flex: 1;
    text-align: left; /* Align logo to the left */
}

.logo img {
    max-width: 200px; /* Adjust logo size */
}

nav ul {
    list-style-type: none;
    padding: 0;
    display: inline-block;
}

nav ul li {
    display: inline;
    margin: 0 20px;
}

nav ul li a {
    color: rgb(177, 177, 20);
    text-decoration: none;
    font-size: 18px;
    font-weight: bold;
}

nav ul li a:hover {
    color: #ff6347; /* Hover color */
}

/* Hero Section */
.hero {
    background-image: url('images/mainImg.jpeg'); /* Replace with the image URL */
    background-size: cover;
    background-position: center;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    text-align: center;
}

.hero-content {
    background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background for text */
    padding: 30px;
    border-radius: 10px;
}

.hero h1 {
    font-size: 3rem;
    margin-bottom: 20px;
}

.hero p {
    font-size: 1.5rem;
    margin-bottom: 20px;
}

.hero button {
    background-color: #ff6347;
    border: none;
    color: rgb(249, 248, 250);
    padding: 10px 20px;
    font-size: 1.2rem;
    cursor: pointer;
    border-radius: 5px;
}

.hero button:hover {
    background-color: #e5533f;
}

/* Shop Section */
#shop {
    padding: 50px;
    text-align: center;
}

.product-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between; /* Adjusts spacing between products */
}

.product {
    border: 1px solid #ccc;
    padding: 10px; /* Compact padding */
    text-align: center;
    width: 45%; /* Fit 2 products in a row */
    margin-bottom: 20px; /* Bottom margin */
    box-shadow: 10px 10px 5px rgba(0, 0, 0, 0.1); /* Light shadow */
    transition: transform 0.2s; /* Hover effect */
}

.product:hover {
    transform: scale(1.03); /* Slightly enlarge on hover */
}

.product img {
    max-width: 100%; /* Smaller image size */
    height: auto;
}

.product h3 {
    margin-top: 10px; /* Reduced top margin */
    margin-bottom: 5px; /* Reduced bottom margin */
}

/* Modal styling */
.modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgba(0, 0, 0, 0.5); /* Black w/ opacity */
}

.modal-content {
    background-color: white;
    margin: 15% auto; /* 15% from the top and centered */
    padding: 20px;
    border: 1px solid #888;
    width: 40%; /* Could be more or less, depending on screen size */
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    text-align: center; /* Center align the text */
}

/* Title Styling */
.modal-content h2 {
    color: red; /* Red font for title */
    margin-bottom: 20px;
}

/* Form fields styling */
#signupForm {
    display: flex;
    flex-direction: column;
    gap: 10px; /* Add space between form rows */
}

#signupForm label {
    display: inline-block;
    width: 150px; /* Adjust the width as necessary */
    font-weight: bold;
}

#signupForm input {
    width: calc(100% - 160px); /* Adjust according to label width */
    padding: 5px;
    display: inline-block;
}

#signupForm button {
    margin-top: 10px;
    padding: 10px 20px;
    background-color: #ff6347;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

#signupForm button:hover {
    background-color: #e5533f;
}

/* Submit button styling */
.modal-content button {
    background-color: #ff6347;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

.modal-content button:hover {
    background-color: #e5533f;
}

/* Close button styling */
.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}
